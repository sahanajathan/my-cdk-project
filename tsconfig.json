{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",   // Ensure compiled files go to a separate folder like 'dist'
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "bin/**/*.ts",   // Make sure bin/ files are included
    "src/**/*.ts"
  ]
}
