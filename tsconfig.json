{
  "compilerOptions": {
    "target": "ES2021",                  // Ensure the JavaScript version is compatible with ES modules
    "module": "ESNext",                   // Use ESNext module system
    "moduleResolution": "node",           // Use Node.js module resolution
    "esModuleInterop": true,              // Enable interoperability between CommonJS and ES modules
    "skipLibCheck": true,                 // Skip library checks
    "outDir": "dist",                     // Output directory for compiled JavaScript files
    "rootDir": ".",                       // Set root directory to the project root
    "resolveJsonModule": true,            // Allow importing JSON files
    "strict": true,                       // Enable strict type checking
    "allowJs": true                       // Allow JavaScript files to be compiled
  },
  "include": [
    "bin/**/*.ts",                        // Include TypeScript files from the bin/ directory
    "lib/**/*.ts"                         // Include TypeScript files from the lib/ directory
  ],
  "exclude": [
    "node_modules"                        // Exclude the node_modules directory
  ]
}
