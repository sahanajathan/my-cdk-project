{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",  // Use CommonJS for Node.js
    "outDir": "dist",  // Output compiled files to 'dist' directory
    "rootDir": "src",  // Your source TypeScript files
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "bin/**/*.ts"]  // Include bin and src folders
}
