{
  "compilerOptions": {
    "target": "ES2020",  // You can use a more modern target, like ES2020
    "module": "ESNext",   // Use ESNext for ES Modules
    "moduleResolution": "node",
    "outDir": "./dist",   // The output directory for compiled files
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",  // Your source files
    "bin/**/*.ts"   // Include TypeScript files in the bin directory
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    "dist"          // Exclude dist folder to prevent compilation issues
  ]
}
