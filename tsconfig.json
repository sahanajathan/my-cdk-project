{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",  // Ensure this is set to 'dist'
    "rootDir": "lib"   // Root directory of your source TypeScript code
  },
  "include": [
    "lib/**/*.ts",
    "bin/**/*.ts"   // Make sure this includes the 'bin' folder
  ],
  "exclude": [
    "node_modules"
  ]
}
