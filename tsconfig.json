{
  "compilerOptions": {
    "target": "ES2020",  // Ensure compatibility with modern Node.js
    "module": "CommonJS",  // Node.js requires CommonJS modules
    "esModuleInterop": true,
    "moduleResolution": "node",  // Ensures module resolution works as expected
    "outDir": "dist",  // Output the compiled files to the 'dist' folder
    "strict": true  // Enable strict mode for better TypeScript type-checking
  },
  "include": [
    "src/**/*.ts",
    "bin/**/*.ts"
  ]
}
